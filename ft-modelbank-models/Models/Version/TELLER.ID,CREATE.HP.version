Screen TELLER_ID, CREATE_HP
    t24Name: "TELLER.ID,CREATE.HP"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 0
    description: en = "Teller ID"
reportLocks: Yes

TransactionFlow {
    otherCompanyAccess: Yes
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    language: en
    header1: en = " New Till Creation "
}

Relationship {
    associatedVersions: TELLER_ID,LIMIT_HP ; TELLER_ID,AUDIT
}

attributes: "NO.HEADER.TAB"

Fields {
    "STATUS" {

        Presentation {
            maxLength: 25
            enrichmentLength: 25
