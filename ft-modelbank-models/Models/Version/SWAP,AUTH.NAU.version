Screen SWAP, AUTH_NAU
    t24Name: "SWAP,AUTH.NAU"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 1
    description: en = "Contract details"
reportLocks: Yes

TransactionFlow {
    otherCompanyAccess: Yes
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    language: en
    header1: en = "Interest rate swap"
}

Relationship {
    associatedVersions: SWAP,ASSET ; SWAP,LIABILITY ; SWAP,SETTLEMENT ; SWAP,BROKERDEAL ; SWAP,DELIVERY_DET ;
    SWAP,REPORTING ; SWAP,AUDIT
}

API {
    includeVersionControl: No
}

Fields {
    "CUSTOMER" {

        Presentation {
            maxLength: 25
            enrichmentLength: 25
            column: 1
            row: 0
        }

        Translations:
            label: en = "NN Counterparty"
            toolTip: en = "Counterparty with whom SWAP Txn is arranged"
    }

    "DEALER_DESK" {

        Presentation {
            maxLength: 25
            column: 1
            row: 1
        }

        Translations:
            label: en = "Dealer Desk"
            toolTip: en = "Dealer desk position which needs to be updated"
    }

    "SWAP_TYPE" {

        Presentation {
            inputBehaviour: NoInput
            maxLength: 25
            column: 1
            row: 2
        }

        Translations:
            label: en = "Swap Type"
            toolTip: en = "Specifies the type of Swap like IRS or CIRS"
    }

    "TRADE_TYPE" {

        Presentation {
            inputBehaviour: NoInput
            maxLength: 25
            column: 1
            row: 3
        }

        Translations:
            label: en = "Trade Type"
            toolTip: en = "Specify whether the deal is TRADE or HEDGE"
    }

    "TRADE_DATE" {

        Presentation {
            maxLength: 25
            column: 1
            row: 4
        }

        Translations:
            label: en = "NN Trade date"
            toolTip: en = "Date on which trade is entered"
    }

    "VALUE_DATE" {

        Presentation {
            maxLength: 25
            column: 1
            row: 5
        }

        Translations:
            label: en = "Value Date"
            toolTip: en = "Date on which the contract period starts"
    }

    "MATURITY_DATE" {

        Presentation {
            maxLength: 25
            column: 1
            row: 6
        }

        Translations:
            label: en = "Maturity Date"
