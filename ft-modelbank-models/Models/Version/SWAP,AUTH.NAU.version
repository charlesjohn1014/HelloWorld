    "LIMIT_REFERENCE" {

        Presentation {
            maxLength: 25
            column: 1
            row: 10
        }

        Translations:
            label: en = "Limit Reference"
    }

    "AGREEMENT_TYPE" {

        Presentation {
            maxLength: 25
            enrichmentLength: 21
            column: 1
            row: 11
        }

        Translations:
            label: en = "NN Agreement"
            toolTip: en = "Defines the Swap agreement type. Eg. ISDA,BBA"
    }

    "CONDITIONS" {

        Presentation {
            maxLength: 25
            column: 1
            row: 12
        }

