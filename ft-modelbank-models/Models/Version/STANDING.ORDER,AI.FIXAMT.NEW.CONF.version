Screen STANDING_ORDER, AI_FIXAMT_NEW_CONF
    t24Name: "STANDING.ORDER,AI.FIXAMT.NEW.CONF"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 0
    description: en = "Check the transaction details and Confirm"
reportLocks: Yes
refNoInFirstLine: Yes

TransactionFlow {
    otherCompanyAccess: Yes
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    browserToolbar: "ARC.CANCEL.STO"
    language: en
}

API {
    includeVersionControl: No
}

attributes: "NO.HEADER.TAB"

Fields {
    "BEN_REFERENCE" {

        Presentation {
            displayType: NoDisplay
            maxLength: 34
            enrichmentLength: 35
            column: 1
            row: 0
        }

        default: IF ( ) "NULL" THEN "!CURRENT.ACC"
        Translations:
            label: en = "Account to make payment(s) from : "
    }

    "CPTY_ACCT_NO" {

        Presentation {
            maxLength: 34
            enrichmentLength: 35
            column: 1
            row: 1
            mandatory: Yes
        }

        Translations:
            label: en = "Payee Account Number"
            toolTip: en = "Beneficiary account number"
    }

    "CURRENCY" {

        Presentation {
            displayType: DropDown.NoInput
            maxLength: 34
            enrichmentLength: 35
            column: 1
            row: 2
            mandatory: Yes
            selectionEnquiry: "AI.CURRENCY.LIST"
        }

        default: IF ( ) "NULL" THEN "!CURRENT.CCY"
        Translations:
            label: en = "Currency"
            toolTip: en = "Specifies the ccy of the Standing Order payment"
    }

    "CURRENT_AMOUNT_BAL" {

        Presentation {
            maxLength: 34
            enrichmentLength: 35
            column: 1
            row: 3
            mandatory: Yes
        }

        Translations:
            label: en = "Amount to pay"
            toolTip: en = "Specifies the amount of the Standing Order"
    }

    "FREQUENCY" {

        Presentation {
            maxLength: 34
            enrichmentLength: 35
            column: 1
            row: 4
            mandatory: Yes
        }

        Translations:
            label: en = "Payment Frequency"
            toolTip: en = "Identifies the Current Frequency of the STO"
    }

    "START_DATE" {

        Presentation {
            maxLength: 34
            enrichmentLength: 35
            column: 1
            row: 5
            mandatory: Yes
        }

        Translations:
            label: en = "First payment date"
    }

    "CURRENT_END_DATE" {

        Presentation {
            maxLength: 34
            enrichmentLength: 36
            column: 1
            row: 6
        }

        Translations:
            label: en = "Final payment date"
            toolTip: en = "Identifies the Current End Date of the STO"
    }

    "PAYMENT_DETAILS" {

        Presentation {
            maxLength: 34
            enrichmentLength: 34
            expansion: No
            column: 1
            row: 7
        }

        Translations:
            label: en = "Payment Details"
        MV: 1
    }

    "CURRENT_FREQUENCY" {

        Presentation {
            displayType: NoDisplay
            maxLength: 25
            enrichmentLength: 35
            column: 1
            row: 8
        }

    }

    "K_TYPE" {
        default: IF ( ) "NULL" THEN "FI"
    }

    "PAY_METHOD" {
        default: IF ( ) "NULL" THEN "AC"
    }

    "PRINT_ADVICE" {
        default: IF ( ) "NULL" THEN "Y"
    }

}