Screen IM_DOCUMENT_IMAGE, PW_SIGNATURE
    t24Name: "IM.DOCUMENT.IMAGE,PW.SIGNATURE"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 0
    description: en = "Capture Signature"
reportLocks: Yes

TransactionFlow {
    otherCompanyAccess: Yes
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    language: en
    header2: en = "                                       Capture an Image "
}

Relationship {
    associatedVersions: IM_DOCUMENT_IMAGE,AUDIT
}

attributes: "NO.HEADER.TAB"

Fields {
    "IMAGE_REFERENCE" {

        Presentation {
            maxLength: 25
            enrichmentLength: 40
            column: 1
            row: 0
        }

        Translations:
            label: en = "Customer Id"
        promptText: en = "Reference"
            toolTip: en = "Used as a reference to the image being stored."
    }

    "DESCRIPTION" {

        Presentation {
            maxLength: 25
            enrichmentLength: 13
            column: 1
            row: 1
        }

        Translations:
            label: en = "Description"
        promptText: en = "Description"
            toolTip: en = "Used to record the details of the image."
        MV: 1
    }

    "IMAGE_TYPE" {
        default: IF ( ) "NULL" THEN "SIGNATURES"
    }

    "MULTI_MEDIA_TYPE" {
        default: IF ( ) "NULL" THEN "IMAGE"
    }

    "IMAGE_APPLICATION" {
        default: IF ( ) "NULL" THEN "CUSTOMER"
    }

}