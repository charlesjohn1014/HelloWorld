    "CURRENCY_1" {

        Presentation {
            inputBehaviour: NoInput
            maxLength: 15
            column: 1
            row: 0
        }

        default: IF ( ) "NULL" THEN "!LOCAL.CCY"
        Translations:
            label: en = "Draft Currency"
            toolTip: en = "Draft Currency"
    }

    "AMOUNT_LOCAL_1" {

        Presentation {
            maxLength: 13
            expansion: No
            column: 58
            row: 0
            hotField: Yes
