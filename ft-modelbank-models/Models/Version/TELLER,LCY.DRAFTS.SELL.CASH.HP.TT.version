Screen TELLER, LCY_DRAFTS_SELL_CASH_HP_TT
    t24Name: "TELLER,LCY.DRAFTS.SELL.CASH.HP.TT"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 1
    description: en = "Issue Lcy Draft against Cash"
reportLocks: Yes

TransactionFlow {
    otherCompanyAccess: Yes
    dealSlips:
    format: "TT.DDCASH" dealSlipFunction:  I
    dealSlipsTrigger: OL
    dealSlipStyleSheet: "/transforms/custom/modelEnquiry.xsl"
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    language: en
    header1: en = "Issue Lcy Draft against Cash"
}

Relationship {
    associatedVersions: TELLER,TC_SELL_CASH_DENOM ; TELLER,AUDIT
}

attributes: "CUSTOM.VERSION.ALIGN"

