Screen IS_BASIC_DETAILS, IS_REVIEWER_REQD
    t24Name: "IS.BASIC.DETAILS,IS.REVIEWER.REQD"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 0
reportLocks: Yes

TransactionFlow {
    otherCompanyAccess: Yes
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    language: en
    header1: en = "Islamic Basic Setup"
}

Fields {
    "CUSTOMER_ID" {

        Presentation {
            inputBehaviour: NoInput
            maxLength: 35
            enrichmentLength: 15
            enrichment: Yes
            column: 1
            row: 0
        }

        default: IF ( ) "NULL" THEN "!CURRENT.CUSTOMER"
        Translations:
            label: en = "Customer ID"
    }

    "CREATE_REVIEWER" {

        Presentation {
            displayType: Toggle
            maxLength: 35
            enrichmentLength: 15
            column: 1
            row: 1
        }

        Translations:
            label: en = "Is Reviewer to be created?"
    }

}