Screen SEC_TRADE, INPUT
    t24Name: "SEC.TRADE,INPUT"
    metamodelVersion: "1.30.6"
    numberOfAuthorisers: 1
    description: en = "Direct securities trade input"
reportLocks: Yes

TransactionFlow {
    otherCompanyAccess: Yes
}

Presentation {
    recordsPerPage: "1"
    fieldsPerLine: "MULTI"
    language: en
    header1: en = "Direct securities trade input"
}

Relationship {
    associatedVersions: SEC_TRADE,CUST_DETS ; SEC_TRADE,BROK_CLNT_DETS ; SEC_TRADE,ACTUAL_SETT_DETS ;
