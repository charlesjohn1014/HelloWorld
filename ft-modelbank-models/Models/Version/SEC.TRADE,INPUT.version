    "SECURITY_CODE" {

        Presentation {
            maxLength: 20
            enrichmentLength: 35
            column: 1
            row: 0
        }

        Translations:
            label: en = "Security number"
            toolTip: en = "Identifies the Security being Traded"
    }

    "SECURITY_CURRENCY" {

        Presentation {
            displayType: NoDisplay
            maxLength: 20
            enrichmentLength: 8
            column: 1
            row: 1
        }

